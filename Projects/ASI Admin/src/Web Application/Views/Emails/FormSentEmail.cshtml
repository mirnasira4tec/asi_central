@model  asi.asicentral.model.store.FormInstance
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=Windows-1252">
    <title>ASICentral</title>
    <style type="text/css">
html {
    height: 100%;
	-webkit-text-size-adjust:none;
    }
    h1 {
    font-size: 18px;
    font-style: normal;
    font-weight: normal;
    }
    h2 {
    font-size: 16px;
    font-style: normal;
    font-weight: normal;
    }
    a, a:active{
    color:#DA1C23;
    text-decoration:none;
	outline:none;
    }
    a:hover{
    text-decoration:underline;
    }
    img {
    display:block;
    }
    .white-link{
        color: #FFFFFF;
    }
    .white-link:hover,
    .white-link:active{
        color:#FFFFFF;
    }
    </style>
</head>
<body style="font-family: Helvetica, Arial, sans-serif;font-size: 14px;margin: 0 auto;background-color: #C9C9C9;line-height: 18px;padding:0;">
    <table style="background-color: #FFFFFF;margin: 0 auto;vertical-align:top;" width="650" border="0" cellspacing="0" cellpadding="0">
        <tr style="vertical-align:top;">
            <td colspan="2">
                <table border="0" cellpadding="0" cellspacing="0" width="650">
                    <tr>
                        <td><img alt="ASI Logo" src="https://store.asicentral.com/media/emails/asi-logo.jpg" width="150" height="90" /></td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr  style="vertical-align:top;">
            <td>
                <table border="0" cellpadding="0" cellspacing="20" width="100%">
                    <tr>
                <td colspan="2">
                    <h2>You have an order to review, <a href="https://store.asicentral.com/@Model.FormType.RequestType/Form?reference=@Model.ExternalReference">click here to continue</a></h2>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    Salutation: @Model.Salutation
                    <br />
                    Email : @Model.Email
                    <br />
                    Total : @Model.Total
                    <br />
                    Greetings : @Model.Greetings
                    <br />
                    Comments : @Model.Comments
                </td>
            </tr>
                    <tfoot>
                        <tr>
                            <td>Thank you,<br />
                                The ASI Team</td>
                        </tr>
                    </tfoot>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
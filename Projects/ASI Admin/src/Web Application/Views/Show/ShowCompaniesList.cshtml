@using asi.asicentral.web.models.show
@using asi.asicentral.model.show
@model ShowCompaniesModel
@{
    Layout = "~/Views/Show/Shared/_Layout.cshtml";
}
<h1>Company Attendee List</h1>
<div class="pull-right"><a href="/showCompany/AddCompaniesToShow?showId=@Model.ShowId" class="btn btn-primary"> Add Attendees </a> <a href="/Show/ShowList" class="btn"> Cancel </a> </div>
 <br />
 <br />
@if (Model.Show != null)
{
    <h2>@Model.Show.Name (@Model.Show.StartDate.ToString("MMM") @Model.Show.StartDate.Day.ToString() - @Model.Show.EndDate.ToString("MMM") @Model.Show.EndDate.Day.ToString()) </h2>
}
<table class="table table-bordered table-condensed table-striped">
    <thead>
        <tr>
             <th>&nbsp;</th>
            <th>ASI#</th>
            <th>Company Name</th>
            <th>Member Type</th>
            <th>Is Sponsor</th>
            <th>Exhibit Day</th>
            <th>Presentation</th>
            <th>Round Table</th>
            <th>Booth Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ShowAttendee showAttendee in Model.ShowAttendees)
        {
            <tr>
                <td><a class="delete" id="@showAttendee.Id" href="/ShowCompany/DeleteAttendeeCompany?id=@showAttendee.Id&showId=@Model.Show.Id"><i class="icon-trash"></i></a></td>
                <td>@showAttendee.Company.ASINumber</td>
                <td><a href="/ShowCompany/GetCompanyDetailsForShow?companyId=@showAttendee.Company.Id&showId=@(Model.Show != null ? Model.Show.Id : 0)">@showAttendee.Company.Name</a></td>
                <td>@showAttendee.Company.MemberType</td>
                <td>
                    @if (showAttendee.IsSponsor)
                    {
                        <a class="icon-ok" />
                    }
                    else
                    {
                        <a class="icon-remove" />
                    }
                </td>
                <td>
                    @if (showAttendee.IsExhibitDay)
                    {
                        <a class="icon-ok" />
                    }
                    else
                    {
                        <a class="icon-remove" />
                    }
                </td>
                 <td>
                    @if (showAttendee.IsPresentation)
                    {
                        <a class="icon-ok" />
                    }
                    else
                    {
                        <a class="icon-remove" />
                    }
                </td>
                 <td>
                    @if (showAttendee.IsRoundTable)
                    {
                        <a class="icon-ok" />
                    }
                    else
                    {
                        <a class="icon-remove" />
                    }
                </td>
                <td>@showAttendee.BoothNumber</td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script type="text/javascript">
        $('a.delete').click(function () {
            var confirms = confirm("Are you sure you want to delete the company?");
            if (confirms)
                return true
            else
                return false
        });
    </script>
}

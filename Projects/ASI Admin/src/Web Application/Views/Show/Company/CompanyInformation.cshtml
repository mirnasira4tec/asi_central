@using asi.asicentral.web;
@using asi.asicentral.model.show
@using asi.asicentral.web.models.show
@using asi.asicentral.Resources
@using asi.asicentral.interfaces
@model CompanyInformation
@{
    
    Layout = "~/Views/Show/Shared/_Layout.cshtml";
}
<h3>
    <a class="btn btn-small" href="@Url.Action("CompanyList", "ShowCompany")">
        <i class="icon-backward"></i>
    </a>
    @Model.Name
</h3>
<div class=" span12 clearfix">
    <div class="span6"><a class="btn btn-small" href="@Url.Action("AddAddress", "../ShowCompany", new { CompanyID = Model.Id })"><i class="icon-plus"></i>
        Add Address
        </a><table class="table table-bordered table-striped"">
  <thead>
    <tr>
      <th>Street 1</th>
      <th>State</th>
      <th>Zip</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var address in @Model.CompanyAddress)
    { <tr>
                <td>@address.Address.Street1</td>
                <td>@address.Address.State </td>
                <td>@address.Address.Zip</td>
            </tr>
    
    }
  </tbody>
</table></div>
    <div class="span5"><a class="btn btn-small" href="@Url.Action("AddEmployee", "../ShowCompany", new { CompanyID = Model.Id })"><i class="icon-plus"></i>
        Add Employee
    </a><table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var employee in @Model.Employee)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName </td>
                <td>@employee.Email</td>
            </tr>
        }
  </tbody>
</table></div>
</div>

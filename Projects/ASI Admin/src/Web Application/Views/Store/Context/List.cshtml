@model IList<asi.asicentral.model.store.Context>

@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<h1>Product Context List</h1>
<p>Used to show the list of available contexts for the user to choose from</p>
<table class="table table-bordered table-condensed">
    <thead><tr><th>Name</th><th># Products</th><th># Features</th></tr></thead>
    <tbody>
        @foreach (asi.asicentral.model.store.Context context in Model)
        {
            <tr><td>@Html.ActionLink(context.Name, "ProductComparison", "Context", new { id = @context.ContextId }, null)</td><td>@context.Products.Count()</td><td>@context.Features.Count()</td></tr>
        }
    </tbody>
</table>
<div style="padding-bottom:20px" />
					        @Html.EditorFor(m => Model.Contacts[i].Email) @Html.ValidationMessageFor(m => Model.Contacts[i].Email)
                            }
                            else
                            {
                            @Html.TextBoxFor(m => Model.Contacts[i].FirstName, new { @readonly = "readonly" })
					        @Html.TextBoxFor(m => Model.Contacts[i].LastName, new { @readonly = "readonly" })
					        @Html.TextBoxFor(m => Model.Contacts[i].Email, new { @readonly = "readonly" })
                            }
				        </span>
				        <span class="label-row">
					        @Html.LabelFor(m => Model.Contacts[i].Title)
					        @Html.LabelFor(m => Model.Contacts[i].Phone)
					        @Html.LabelFor(m => Model.Contacts[i].Fax)
				        </span>
				        <span class="label-row">
                            @if ((Model.Contacts[i].IsPrimary && Model.IsPrimaryEditable) || (!Model.Contacts[i].IsPrimary && Model.IsPrimaryEditable))
                            {
					        @Html.EditorFor(m => Model.Contacts[i].Title) @Html.ValidationMessageFor(m => Model.Contacts[i].Title)
					        @Html.EditorFor(m => Model.Contacts[i].Phone) @Html.ValidationMessageFor(m => Model.Contacts[i].Phone)
					        @Html.EditorFor(m => Model.Contacts[i].Fax) @Html.ValidationMessageFor(m => Model.Contacts[i].Fax)
                            }
                            else
                            {
                            @Html.TextBoxFor(m => Model.Contacts[i].Title, new { @readonly = "readonly" })
					        @Html.TextBoxFor(m => Model.Contacts[i].Phone, new { @readonly = "readonly" })
					        @Html.TextBoxFor(m => Model.Contacts[i].Fax, new { @readonly = "readonly" })
                            }
				        </span>
                    }

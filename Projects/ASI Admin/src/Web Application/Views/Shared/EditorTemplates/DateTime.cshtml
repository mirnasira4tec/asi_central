@{
    string dateTimeFormat = "MM/dd/yyyy HH:mm:ss";
    IDictionary<string, object> attributes = asi.asicentral.util.HtmlHelper.GetAttributes(ViewData, "text-box single-line valid");
    attributes.Add("data-format", dateTimeFormat.ToLower());
    attributes.Remove("type");
    attributes.Add("type","date");
}
<div id="@(ViewData.ModelMetadata.PropertyName + "Picker")" class="input-append date">@Html.TextBox("", (Model != null) ? ((object)String.Format("{0:" + dateTimeFormat + "}", Model, attributes)) : string.Empty)<span class="add-on"><i class="datepicker" data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span></div>
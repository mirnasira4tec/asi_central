@inherits System.Web.Mvc.WebViewPage<asi.asicentral.model.Publication>
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
                This Web page shows how to view/edit a specific database item. All other strings are from a Resource file.
            </p>
        </div>
    </section>
}
@using (Html.BeginForm()) {
@Html.AntiForgeryToken()
<h3>@Html.Encode(asi.asicentral.web.Resource.PublicationEditFieldsTitle)</h3>  <input type="submit" value="Save" /> @Html.ActionLink("Cancel", "Index");
@Html.HiddenFor(model=>model.PublicationId)
<div class="editor-label">@Html.LabelFor(model => model.Name)</div>
<div class="editor-field">@Html.EditorFor(model => model.Name, "singleLineString") @Html.ValidationMessageFor(model => model.Name)</div>    
<h4>@Html.Encode(asi.asicentral.web.Resource.PublicationEditFieldsSchedule)</h4>
<table>
    <tr><th style="width:100px">@Html.Encode(asi.asicentral.Resource.PublicationIssueId)</th><th style="width:200px">@Html.Encode(asi.asicentral.Resource.PublicationIssueName)</th></tr>
    @foreach (asi.asicentral.model.PublicationIssue issue in Model.Issues)
    {
        <tr><td>@issue.PublicationIssueId</td><td>@issue.Name</td></tr>
    }
</table>
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
